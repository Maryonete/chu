{% extends 'base.html.twig' %} {% block title %}liste des Spécialités{% endblock
%} {% block body %}
<div class="container px-4 py-5" id="featured-3">
  <h1 class="pb-2 border-bottom">
    Liste des spécialités pratiquées à l'Hospital
  </h1>

  <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
    {% for spe in specialites %}

    <div class="feature col">
      <div class="feature-icon bg-primary bg-gradient">
        <svg class="bi" width="1em" height="1em">
          <use xlink:href="#collection"></use>
        </svg>
      </div>
      <h2>{{ spe.name }}</h2>

      <p style="text-align: justify">
        {{ spe.description | raw }}
      </p>
      {% if spe.getMedecins|length > 0 %}
      <p>
        <b>Médecins:</b> {% for medecin in spe.getMedecins|sort((a, b) =>
        a.user.lastname <=> b.user.lastname) %}
        {{ medecin.user.lastname }}
        {{ medecin.user.firstname }}, {% endfor %}
      </p>
      {% endif %}
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
